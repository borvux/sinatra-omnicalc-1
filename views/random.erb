<form action="/random/results">
  <div>
    <label for="min_field">Minimum</label>
    <input id="min_field" text="text" name="min" placeholder="E.g. 1.5">
  </div>

  <div>
    <label for="max_field">Maximum</label>
    <input id="max_field" text="text" name="max" placeholder="E.g. 4.5">
  </div>

  <button>Pick random number</button>
</form>
